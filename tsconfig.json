// see: http://json.schemastore.org/tsconfig
{
    "compilerOptions": {
        "sourceMap": false,
        // 2017/6/1 22:18:29
        "removeComments": true,
        "declaration": false,
        // statistics
        "diagnostics": true,
        // "inlineSourceMap": true,
        // "inlineSources": true,
        // Stylize errors and messages using color and context (experimental).
        "pretty": true,
        //
        //"checkJs": true,
        "rootDir": "./src/ts",
        "outDir": "./",

        "listFiles": false,
        "newLine": "LF",

        "target": "es5",
        "module": "commonjs",

        "noEmitHelpers": false,

        "noImplicitAny": false,
        "strictNullChecks": false,

        "allowJs": true,
        "checkJs": true,
        // NOTE: test use.
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "files": [
        "./src/ts/index.ts",
        "./src/ts/test/tdev.ts",
        "./src/ts/index-dev.ts"
    ]
}